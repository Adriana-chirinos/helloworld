pipeline {
    agent none

    stages {
        stage('Windows') {
            agent any
            steps {
                bat 'hostname'
                script {
                    bat 'echo El nombre de host es %COMPUTERNAME% > hostname.txt'
                    stash name: 'windows-hostname', includes: 'hostname.txt'
                }
            }
        }
        
        stage('LinuxA') {
            agent { label 'linux' }
            steps {
                   unstash 'windows-hostname'
                   echo 'hello world'
                   bat 'whoami'
                   bat 'type hostname.txt'
            }
        }
         
        stage('LinuxB') {
            agent { label 'linux' }
            steps {
                 unstash 'windows-hostname'
                   echo 'hello world'
                   bat 'whoami'
                   bat 'type hostname.txt'
            }
        }
    }
}
