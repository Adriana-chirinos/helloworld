pipeline {
    agent none

    stages {
        stage('Windows')
        {
         agent any
         steps
         {
          bat 'hostname'   
         }
        }
        
        stage ('LinuxA'){
            agent {label 'linux'}
            steps {
                echo 'hello world'
                bat 'hostname' 
                bat 'whoami'
            }
            
        }
         
           stage ('LinuxB'){
            agent {label 'linux'}
            steps {
                echo 'hello world'
                bat 'hostname' 
                bat 'whoami'
            }
            
        }
         
    }
}
